<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            default-charset="UTF-8"
            describer="phasereditor.scene.core.SceneContentTypeDescriber"
            file-extensions="scene"
            id="phasereditor.scene.core.SceneContentType"
            name="Scene"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="phasereditor.project.core.buildParticipant">
      <participant
            handler="phasereditor.scene.core.SceneFileDataBuilderParticipant"
            id="phasereditor.scene.core.sceneFilesParticipant"
            order="2">
      </participant>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="phasereditor.scene.core.sceneContentTypeTest">
         <and>
          <instanceof
               value="org.eclipse.core.resources.IFile">
         </instanceof>
         <test
               property="org.eclipse.core.resources.contentTypeId"
               value="phasereditor.scene.core.SceneContentType">
         </test>
         </and>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ltk.core.refactoring.renameParticipants">
      <renameParticipant
            class="phasereditor.scene.core.refactoring.RenameSceneCompiledFile"
            id="phasereditor.scene.core.refactoring.RenameSceneCompiledFile"
            name="Rename Scene Compiled File">
         <enablement>
            <reference
                  definitionId="phasereditor.scene.core.sceneContentTypeTest">
            </reference>
         </enablement>
      </renameParticipant>
   </extension>
   <extension
         point="org.eclipse.ltk.core.refactoring.moveParticipants">
      <moveParticipant
            class="phasereditor.scene.core.refactoring.MoveSceneCompiledFile"
            id="phasereditor.scene.core.refactoring.MoveSceneCompiledFile"
            name="Move Scene Compiled File">
         <enablement>
            <reference
                  definitionId="phasereditor.scene.core.sceneContentTypeTest">
            </reference></enablement>
      </moveParticipant>
   </extension>
   <extension
         point="phasereditor.webrun.core.webcontent">
      <dynamic
            handler="phasereditor.scene.core.web.SceneScreenshotHandler">
      </dynamic>
   </extension>

</plugin>
