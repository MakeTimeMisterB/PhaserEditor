<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<extension
         point="org.eclipse.ui.editors">
      <editor
            class="phasereditor.scene.ui.editor.SceneEditor"
            default="false"
            icon="platform:/plugin/phasereditor.ui/icons/canvas.png"
            id="phasereditor.scene.ui.editor.SceneEditor"
            name="Scene Editor">
         <contentTypeBinding
               contentTypeId="phasereditor.scene.core.SceneContentType">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="phasereditor.scene.ui.editor.category"
            name="Scene Editor">
      </category>
      <command
            categoryId="phasereditor.scene.ui.editor.category"
            id="phasereditor.scene.ui.editor.positionTool"
            name="Show Position Tool">
      </command>
      <command
            categoryId="phasereditor.scene.ui.editor.category"
            id="phasereditor.scene.ui.editor.scaleTool"
            name="Show Scale Tool">
      </command>
      <command
            categoryId="phasereditor.scene.ui.editor.category"
            id="phasereditor.scene.ui.editor.angleTool"
            name="Show Angle Tool">
      </command>
      <command
            categoryId="phasereditor.scene.ui.editor.category"
            id="phasereditor.scene.ui.editor.originTool"
            name="Show Origin Tool">
      </command>
      <command
            categoryId="phasereditor.scene.ui.editor.category"
            id="phasereditor.scene.ui.editor.resizeTileSprite"
            name="Resize Tile Sprite">
      </command>
      <command
            categoryId="phasereditor.scene.ui.editor.category"
            id="phasereditor.scene.ui.editor.order_UP"
            name="Move Objects Up">
      </command>
      <command
            categoryId="phasereditor.scene.ui.editor.category"
            id="phasereditor.scene.ui.editor.order_DOWN"
            name="Move Objects Down">
      </command>
      <command
            categoryId="phasereditor.scene.ui.editor.category"
            id="phasereditor.scene.ui.editor.order_TOP"
            name="Move Objects to the Top">
      </command>
      <command
            categoryId="phasereditor.scene.ui.editor.category"
            id="phasereditor.scene.ui.editor.order_BOTTOM"
            name="Move Objects to the Bottom">
      </command>
      <command
            categoryId="phasereditor.scene.ui.editor.category"
            id="phasereditor.scene.ui.editor.duplicateObjects"
            name="Duplicate Selected Objects">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="phasereditor.scene.ui.editor.handlers.ShowPositionToolHandler"
            commandId="phasereditor.scene.ui.editor.positionTool">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.editor.sceneOrToolbar">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ShowScaleToolHandler"
            commandId="phasereditor.scene.ui.editor.scaleTool">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.editor.sceneOrToolbar">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ShowAngleToolHandler"
            commandId="phasereditor.scene.ui.editor.angleTool">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.editor.sceneOrToolbar">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ShowOriginToolHandler"
            commandId="phasereditor.scene.ui.editor.originTool">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.editor.sceneOrToolbar">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ResizeTileSpriteHandler"
            commandId="phasereditor.scene.ui.editor.resizeTileSprite">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.editor.sceneOrToolbar">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ChangeObjectsOrderHandler"
            commandId="phasereditor.scene.ui.editor.order_UP">
          <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.editor.sceneOrToolbarHasSelection">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ChangeObjectsOrderHandler"
            commandId="phasereditor.scene.ui.editor.order_DOWN">
          <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.editor.sceneOrToolbarHasSelection">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ChangeObjectsOrderHandler"
            commandId="phasereditor.scene.ui.editor.order_TOP">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.editor.sceneOrToolbarHasSelection">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ChangeObjectsOrderHandler"
            commandId="phasereditor.scene.ui.editor.order_BOTTOM">
          <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.editor.sceneOrToolbarHasSelection">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.DeleteHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.editor.sceneOrToolbarHasSelection">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.DuplicateSelectedObjectsHandler"
            commandId="phasereditor.scene.ui.editor.duplicateObjects">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.editor.sceneOrToolbarHasSelection">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="phasereditor.scene.ui.editor.positionTool"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M">
      </key>
      <key
            commandId="phasereditor.scene.ui.editor.scaleTool"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="S">
      </key>
      <key
            commandId="phasereditor.scene.ui.editor.angleTool"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="N">
      </key>
      <key
            commandId="phasereditor.scene.ui.editor.originTool"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="O">
      </key>
      <key
            commandId="phasereditor.scene.ui.editor.resizeTileSprite"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="L">
      </key>
      <key
            commandId="phasereditor.scene.ui.editor.order_UP"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="PAGE_UP">
      </key>
      <key
            commandId="phasereditor.scene.ui.editor.order_DOWN"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="PAGE_DOWN">
      </key>
      <key
            commandId="phasereditor.scene.ui.editor.order_TOP"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="HOME">
      </key>
      <key
            commandId="phasereditor.scene.ui.editor.order_BOTTOM"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="END">
      </key>
      <key
            commandId="phasereditor.scene.ui.editor.duplicateObjects"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+D">
      </key>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="phasereditor.scene.ui.editor.sceneContext">
         <and>
         	<not>
         		<with
	                  variable="activeContexts">
	               <iterate
	                     ifEmpty="false"
	                     operator="or">
	                  <equals
	                        value="phasereditor.scene.ui.editor.search">
	                  </equals>
	               </iterate>
	            </with>
         	</not>
	         <or>
	            <with
	                  variable="activePartId">
	               <equals
	                     value="phasereditor.scene.ui.editor.SceneEditor">
	               </equals>
	            </with>
	            <and>
	               <with
	                     variable="activePartId">
	                  <equals
	                        value="org.eclipse.ui.views.ContentOutline">
	                  </equals>
	               </with>
	               <with
	                     variable="activeEditorId">
	                  <equals
	                        value="phasereditor.scene.ui.editor.SceneEditor">
	                  </equals>
	               </with>
	            </and>
	         </or>
         </and>
      </definition>
      <definition
            id="phasereditor.scene.ui.editor.hasSelection">
         <with
               variable="selection">
            <count
                  value="+">
            </count>
         </with>
      </definition>
      <definition
            id="phasereditor.scene.ui.editor.sceneContextHasSelection">
         <and>
            <reference
                  definitionId="phasereditor.scene.ui.editor.sceneContext">
            </reference>
            <reference
                  definitionId="phasereditor.scene.ui.editor.hasSelection">
            </reference>
         </and>
      </definition>
      <definition
            id="phasereditor.scene.ui.editor.toolbar">
         <with
               variable="activeContexts">
            <iterate
                  ifEmpty="false"
                  operator="or">
               <equals
                     value="phasereditor.scene.ui.editor.command">
               </equals>
            </iterate>
         </with>
      </definition>
      <definition
            id="phasereditor.scene.ui.editor.sceneOrToolbarHasSelection">
         <or>
            <reference
                  definitionId="phasereditor.scene.ui.editor.toolbar">
            </reference>
            <reference
                  definitionId="phasereditor.scene.ui.editor.sceneContextHasSelection">
            </reference>
        </or>
      </definition>
      <definition
            id="phasereditor.scene.ui.editor.sceneOrToolbar">
         <or>
            <reference
                  definitionId="phasereditor.scene.ui.editor.sceneContext">
            </reference>
            <reference
                  definitionId="phasereditor.scene.ui.editor.toolbar">
            </reference>
         </or>
      </definition>
   </extension>
   <extension
         point="phasereditor.project.core.buildParticipant">
      <participant
            handler="phasereditor.scene.ui.editor.build.SceneEditorProjectBuildParticipant"
            id="phasereditor.scene.ui.editor.build.SceneEditorProjectBuildParticipant"
            order="999">
      </participant>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="phasereditor.scene.ui.editor.command"
            name="Scene Properties section command.">
      </context>
      <context
            id="phasereditor.scene.ui.editor.search"
            name="In Search context.">
      </context>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="phasereditor.ui.wizardCategory"
            class="phasereditor.scene.ui.editor.wizards.NewSceneFileWizard"
            finalPerspective="phasereditor.ide.ui.perspective"
            icon="platform:/plugin/phasereditor.ui/icons/new_canvas.png"
            id="phasereditor.scene.ui.editor.wizards.NewSceneFileWizard"
            name="Scene File">
         <description>
            Creates a new Scene file.
         </description>
         <keywordReference
               id="phasereditor.scene.ui.editor.keywordCanvas">
         </keywordReference>
         <keywordReference
               id="phasereditor.scene.ui.editor.keywordPrefab">
         </keywordReference>
         <keywordReference
               id="phasereditor.scene.ui.editor.keywordScene">
         </keywordReference>
         <keywordReference
               id="phasereditor.scene.ui.editor.keywordSprite">
         </keywordReference>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.keywords">
      <keyword
            id="phasereditor.scene.ui.editor.keywordScene"
            label="Scene">
      </keyword>
      <keyword
            id="phasereditor.scene.ui.editor.keywordSprite"
            label="Sprite">
      </keyword>
      <keyword
            id="phasereditor.scene.ui.editor.keywordCanvas"
            label="Canvas">
      </keyword>
      <keyword
            id="phasereditor.scene.ui.editor.keywordPrefab"
            label="Prefab">
      </keyword>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <newWizardShortcut
               id="phasereditor.scene.ui.editor.wizards.NewSceneFileWizard">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonWizard
            menuGroupId="phaser.new.other"
            type="new"
            wizardId="phasereditor.scene.ui.editor.wizards.NewSceneFileWizard">
         <enablement></enablement>
      </commonWizard>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="phasereditor.scene.ui.editor.duplicateObjects"
            icon="platform:/plugin/phasereditor.ui/icons/shape-duplicate.png">
      </image>
      <image
            commandId="phasereditor.scene.ui.editor.order_UP"
            icon="platform:/plugin/phasereditor.ui/icons/depth-up.png">
      </image>
      <image
            commandId="phasereditor.scene.ui.editor.order_DOWN"
            icon="platform:/plugin/phasereditor.ui/icons/depth-down.png">
      </image>
      <image
            commandId="phasereditor.scene.ui.editor.order_TOP"
            icon="platform:/plugin/phasereditor.ui/icons/depth-top.png">
      </image>
      <image
            commandId="phasereditor.scene.ui.editor.order_BOTTOM"
            icon="platform:/plugin/phasereditor.ui/icons/depth-bottom.png">
      </image>
      <image
            commandId="phasereditor.scene.ui.editor.positionTool"
            icon="platform:/plugin/phasereditor.ui/icons/shape_move.png">
      </image>
      <image
            commandId="phasereditor.scene.ui.editor.scaleTool"
            icon="platform:/plugin/phasereditor.ui/icons/shape_handles.png">
      </image>
      <image
            commandId="phasereditor.scene.ui.editor.angleTool"
            icon="platform:/plugin/phasereditor.ui/icons/arrow_rotate_clockwise_blue.png">
      </image>
      <image
            commandId="phasereditor.scene.ui.editor.resizeTileSprite"
            icon="platform:/plugin/phasereditor.ui/icons/shape_handles.png">
      </image>
      <image
            commandId="phasereditor.scene.ui.editor.originTool"
            icon="platform:/plugin/phasereditor.ui/icons/origin.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.ltk.core.refactoring.renameParticipants">
      <renameParticipant
            class="phasereditor.scene.ui.editor.refactorings.RenameSceneEditorInput"
            id="phasereditor.scene.ui.editor.refactorings.RenameSceneEditorInput"
            name="Rename Scene Editor">
         <enablement>
            <reference
                  definitionId="phasereditor.scene.core.sceneContentTypeTest">
            </reference>
         </enablement>
      </renameParticipant>
   </extension>
   <extension
         point="org.eclipse.ltk.core.refactoring.moveParticipants">
      <moveParticipant
            class="phasereditor.scene.ui.editor.refactorings.MoveSceneEditorInput"
            id="phasereditor.scene.ui.editor.refactorings.MoveSceneEditorInput"
            name="Move Scene Editor Input">
         <enablement>
            <reference
                  definitionId="phasereditor.scene.core.sceneContentTypeTest">
            </reference></enablement>
      </moveParticipant>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="phasereditor.ui.prefs.phasereditor"
            class="phasereditor.scene.ui.editor.preferences.SceneEditorPreferencePage"
            id="phasereditor.scene.ui.editor.preferencesPage"
            name="Scene Editor">
      </page>
   </extension>

</plugin>
